
@{
    ViewBag.Title = "MaterialSizeIndex";
}

<div id="gMaterialSizeListDiv">
    <div class="well" style="margin-top:5px;">
        <div class="col-md-10 col-sm-10 col-lg-10">
            <h3 style="margin-top:0px; color:darkseagreen">Registrerade materialstorlekar</h3>
        </div>

        <div class="clearfix"></div>

    </div>

    <div id="gMaterialSizeDTDiv"></div>
    <br />


    <div class="well">
        <span>
            <a href="#" class="btn btn-success" onclick="selectMaterialSize('0')">&nbsp;Ny&nbsp;</a><button type="button" class="btn btn-default" style="margin-left:10px;" onclick="getRegisteredMaterial()">
                <span class="glyphicon glyphicon-refresh"></span> Refresh
            </button>
        </span>
        <span id="ErrorTextId" style="color:red; margin-bottom:5px; margin-left:10px">
        </span>
    </div>
</div>

<div id="gMaterialSizeDetailDiv">
</div>





<script>


    $(document).ready(function () {
        getRegisteredMaterialSize();
    });



    var getRegisteredMaterialSize = function () {
        $.post("/MaterialSize/getRegisteredMaterialSize", function (response) {            
            $("#gMaterialSizeDTDiv").empty();
            $("#gMaterialSizeDTDiv").append(response);            
        }, "html");
    }

    var selectMaterialSize = function (materialSizeId) {
        var data = "materialSizeId=" + materialSizeId;
        $.post("/MaterialSize/selectMaterialSize", data, function (response) {            
            $("#gMaterialSizeListDiv").hide();
            $("#gMaterialSizeDetailDiv").empty();
            $("#gMaterialSizeDetailDiv").append(response);
            $("#gMaterialSizeDetailDiv").show();
        }, "html");
    }

</script>




