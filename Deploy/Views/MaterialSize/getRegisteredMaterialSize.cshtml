<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <table class="table table-sm table-striped" id="myDataTable">
                <thead>
                    <tr style="font-size:small; font-weight:bold">
                        <th>Beskrivning</th>
                        <th>Kortnamn</th>
                        <th>Material</th>
                        <th>Längd (m)</th>
                        <th>Bredd (m)</th>
                        <th>Ändra</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.materialSizeList)
                    {
                    <tr style="font-size:small">
                        <td>
                            @item.description
                        </td>
                        <td>@item.sizeShort</td>
                        <td>@item.materialName</td>
                        <td>@item.materialLength</td>
                        <td>@item.materialWidth</td>
                        <td>
                            <a href="#" onclick="selectMaterialSize(@item.materialSizeId)"><i class="glyphicon glyphicon-pencil"></i></a>
                        </td>

                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
        var oTable;
        $(function () {
            oTable = $("#myDataTable").DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Swedish.json"
                }
            });
        });



</script>


