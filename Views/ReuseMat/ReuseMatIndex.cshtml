
@{
    ViewBag.Title = "ReuseMatIndex";
}

<div id="gReuseMatListDiv">
    <div class="well" style="margin-top:5px;">
        <div class="col-md-10 col-sm-10 col-lg-10">
            <h3 style="margin-top:0px; color:darkseagreen">Registrerade procentsatser</h3>
        </div>

        <div class="clearfix"></div>

    </div>

    <div id="gReuseMatDTDiv"></div>
    <br />


    <div class="well">
        <span>
            <a href="#" class="btn btn-success" onclick="selectReuseMat(0)">&nbsp;Ny&nbsp;</a><button type="button" class="btn btn-default" style="margin-left:10px;" onclick="getRegisteredMaterial()">
                <span class="glyphicon glyphicon-refresh"></span> Refresh
            </button>
        </span>
        <span id="ErrorTextId" style="color:red; margin-bottom:5px; margin-left:10px">
        </span>
    </div>
</div>

<div id="gReuseMatDetailDiv">
</div>





<script>


    $(document).ready(function () {
        getRegisteredReuseMat();
    });

    var getRegisteredReuseMat = function () {
        $.post("/ReuseMat/getRegisteredReuseMat", function (response) {
            $("#gReuseMatDTDiv").empty();
            $("#gReuseMatDTDiv").append(response);
        }, "html");

    }

    var selectReuseMat = function (reuseMatId) {
        var data = "reuseMatId=" + reuseMatId;
        $.post("/ReuseMat/selectReuseMat", data, function (response) {
            $("#gReuseMatListDiv").hide();
            $("#gReuseMatDetailDiv").empty();
            $("#gReuseMatDetailDiv").append(response);
            $("#gReuseMatDetailDiv").show();
        }, "html");
    }

</script>

